@model Category

<form method="post">
	<div class="border p-3 mt-4">
		<div class="row pb-2">
			<h3 class="text-primary">Create Category</h3>
			<hr />
		</div>

		<div asp-validation-summary="All"></div> 

		<div class="row mb-3">
			<label asp-for="Name" class="text-primary p-0"></label>
			<input asp-for="Name" class="form-control" />
			<span asp-validation-for="Name" class="text-danger"></span>
		</div>

		<div class="row mb-3">
			<label asp-for="DisplayOrder" class="text-primary p-0"></label>
			<input asp-for="DisplayOrder" class="form-control" />
			<span asp-validation-for="DisplayOrder" class="text-danger"></span>
		</div>
		<div class="row">
			<div class="col-6">
				<button class="btn btn-info form-control" type="submit">Create</button>
			</div>
			<div class="col-6">
				<a asp-controller="Category" asp-action="Index" class="btn form-control btn-info">Back Page</a>

			</div>
		</div>

	</div>
</form>

