@model Category
<div class="border p-3 mt-4">
	<div class="row pb-2">
		<h3 class="text-primary">Create Category</h3>
		<hr/>
	</div>

	<div class="row mb-3">
		<label class="text-primary p-0">Category Name</label>
		<input class="form-control" type="text" />
	</div>

	<div class="row mb-3">
		<label class="text-primary p-0">Display Order</label>
		<input class="form-control" type="text" />
	</div>
	<div class="row">
		<div class="col-6">
			<button class="btn btn-info form-control" type="submit">Create</button>
		</div>
		<div class="col-6">
			<a asp-controller="Category" asp-action="Index" class="btn form-control btn-info">Back Page</a>

		</div>
	</div>

</div>
